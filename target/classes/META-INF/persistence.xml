<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="med-pocos" transaction-type="JTA">
	
	<!--  <persistence-unit name="PostgresDS" transaction-type="JTA"> -->
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		 <jta-data-source>java:/med-pocos</jta-data-source>
		
		 <class>br.com.med.pocos.model.Poco</class>
		 <class>br.com.med.pocos.model.Hidrometro</class>
		 <class>br.com.med.pocos.model.Usuario</class>
		 <class>br.com.med.pocos.model.Empreendimento</class>
		 <class>br.com.med.pocos.model.Responsavel</class>		 
		 

		<properties>
			
			<property name="hibernate.default_schema" value="desenvolvimento" />		
			
			<property name="hibernate.format_sql" value="true" />			

			<property name="hibernate.show_sql" value="true" />

			<property name="hibernate.hbm2ddl.auto" value="update" /> 

			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />

			<property name="hibernate.archive.autodetection" value="class, hbm" />

			<!-- <property name="hibernate.enable_lazy_load_no_trans" value="false" 
				/> -->

			<!-- <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false" 
				/> -->


			<!-- POOL -->
			<property name="hibernate.c3p0.min_size" value="5" />
			<property name="hibernate.c3p0.max_size" value="20" />
			<property name="hibernate.c3p0.timeout" value="300" />
			<property name="hibernate.c3p0.max_statements" value="50" />
			<property name="hibernate.c3p0.idle_test_period" value="3000" />
			<property name="hibernate.id.new_generator_mappings" value="true"/>

		</properties>
	</persistence-unit>

</persistence>
